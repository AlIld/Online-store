@using Data.Models
@model Data.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullPrice)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsPaid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPaid)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsDelivered)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsDelivered)
        </dd>

        <dt class="col-sm-2">
            @Html.Label("Products in order:")
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                @{
                    var newOrderProduct = new OrderProduct()
                    {
                        Product = new Product()
                    };
                }
                <tr>
                    <th>
                        @Html.DisplayNameFor(x => newOrderProduct.Product.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => newOrderProduct.Count)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => newOrderProduct.Product.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => newOrderProduct.Product.Price)
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var orderProduct in Model.OrderProducts)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => orderProduct.Product.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => orderProduct.Count)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => orderProduct.Product.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => orderProduct.Product.Price)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>